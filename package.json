{
  "name": "mood-app-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Mood cross-platform application (Core, NestJS Backend, React Native Frontend).",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:all": "npm run build --workspace=@mood/core",
    "build:core": "npm run build --workspace=@mood/core",
    "dev:backend": "echo 'Run NestJS dev script here'",
    "dev:frontend": "echo 'Run React Native dev script here'",
    "install:all": "npm install"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "@types/node": "^20.12.12",
    "ts-node": "^10.9.2"
  },
  "packageManager": "npm@10.5.1"
}
